##################
server {
	listen 443 ssl http2;
    listen [::]:443 ssl http2;

	server_name {{ item.domain }};

	# SSL
    ssl_certificate {{ item.ssl_path }}/fullchain.pem;
    ssl_certificate_key {{ item.ssl_path }}/privkey.pem;
    ssl_trusted_certificate {{ item.ssl_path }}/fullchain.pem;

	{% if item.htpasswd is defined %}
		auth_basic "Bloom internal area";
		auth_basic_user_file {{ item.htpasswd }};
	{% else %}
		auth_basic off;
	{% endif %}

	# reverse proxy
	location / {
		proxy_set_header X-Forwarded-Host $host;
		proxy_set_header X-Forwarded-Server $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_read_timeout 200;
		{% if item.proxy_auth|default(false) %}
			proxy_set_header Authorization $http_authorization;
			proxy_pass_header  Authorization;
		{% endif %}

		proxy_pass {{ item.proxy_url }};
		include include/proxy.conf;
	}

	{% if item.enable_logs|default(true) %}
    error_log /var/log/nginx/{{ item.domain }}_error.log;
    access_log /var/log/nginx/{{ item.domain }}_access.log bloom;
	{% else %}
	error_log off;
	access_log off;
	{% endif %}
}

# HTTP redirect
server {
	listen 80;
	listen [::]:80;

	server_name {{ item.domain }};

	location / {
		return 301 https://{{ item.domain }}$request_uri;
	}
}
